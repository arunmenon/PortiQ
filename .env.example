# PortiQ Maritime Procurement Platform - Environment Configuration
# Copy this file to .env and fill in values

# =============================================================================
# DATABASE (PostgreSQL 16+ with asyncpg)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://portiq:changeme@localhost:5432/portiq
DATABASE_URL_SYNC=postgresql://portiq:changeme@localhost:5432/portiq

# =============================================================================
# APPLICATION
# =============================================================================
ENVIRONMENT=development
PORT=8000
LOG_LEVEL=debug

# CORS — comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# AUTH (JWT)
# =============================================================================
JWT_SECRET_KEY=CHANGE-ME-IN-PRODUCTION
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=60

# =============================================================================
# OPENAI (for embedding generation - ADR-NF-002)
# =============================================================================
OPENAI_API_KEY=

# =============================================================================
# REDIS (for Celery task queue and caching)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# =============================================================================
# AIS — VesselFinder (https://www.vesselfinder.com/api)
# =============================================================================
VESSEL_FINDER_API_KEY=
VESSEL_FINDER_BASE_URL=https://api.vesselfinder.com

# =============================================================================
# AIS — PCS1x (Indian Port Community System)
# =============================================================================
PCS1X_CLIENT_ID=
PCS1X_CLIENT_SECRET=
PCS1X_BASE_URL=https://api.pcs1x.gov.in

# =============================================================================
# VESSEL TRACKING
# =============================================================================
VESSEL_POSITION_POLL_SECONDS=120
VESSEL_ETA_POLL_SECONDS=300
VESSEL_ARRIVAL_POLL_SECONDS=900
VESSEL_MAX_POSITION_AGE_SECONDS=3600
VESSEL_MAX_SPEED_KNOTS=50.0
VESSEL_MIN_SIGNAL_CONFIDENCE=0.7

# =============================================================================
# EVENT OUTBOX
# =============================================================================
EVENT_OUTBOX_POLL_SECONDS=5
EVENT_OUTBOX_BATCH_SIZE=50
